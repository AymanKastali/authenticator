{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI (Dev Container)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "main:app",
        "--host", "0.0.0.0",
        "--port", "8000",
        "--reload"
      ],
      "envFile": "${workspaceFolder}/../.env",
      "jinja": true,
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Remote Attach (Dev Container)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/workspace"
        }
      ]
    }
  ]
}